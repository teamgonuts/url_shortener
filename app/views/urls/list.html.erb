<% if !flash[:notice].blank? %>
  <div class="notice"> 
    <%= flash[:notice] %>
  </div>
<% end %>

<br/>
<div class="">
  <h2>URLs</h2>
  
  <table class="listing" summary="Url list">
    <tr class="header">
      <th>ID</th>
      <th>Url</th>
      <th>Codename</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th>Actions</th>
    </tr>
    <% @urls.each do |url| %>
    <tr>
      <td><%= url.id %></td>
      <td><%= url.url %></td>
      <td><%= url.codename %></td>
      <td><%= url.created_at %></td>
      <td><%= url.updated_at %></td>
      <td class="actions">
        <%= link_to("Show", {:action => 'show', :id => url.id}, :class => 'action show') %>
        <%= link_to("Edit", {:action => 'edit', :id => url.id}, :class => 'action edit') %>
        <%= link_to("Delete", {:action => 'delete', :id => url.id}, :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
